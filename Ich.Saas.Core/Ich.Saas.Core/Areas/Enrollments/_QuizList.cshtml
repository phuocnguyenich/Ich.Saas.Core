@model Ich.Saas.Core.Areas.Enrollments.Detail

<div class="bg-white pt-15">

    <table class="table table-hover table-sm table-list">

        <tr>
            <th>@Localizer["Quiz"]</th>
            <th>@Localizer["Quiz Date"]</th>
            <th>@Localizer["Grade"]</th>
            <th>&nbsp;</th>
        </tr>

        @if (!Model.Quizzes.Any())
        {
            <tr><td colspan="7" class="no-items">@Localizer["No items to display"]</td></tr>
        }

        @foreach (var quiz in Model.Quizzes)
        {
            <tr>

                <td>@quiz.QuizNumber</td>
                <td>@quiz.QuizDate</td>
                <td>@quiz.Grade</td>
                <td class='text-right'>
                    <a class="btn btn-xs btn-light js-delete" href="/quizzes/delete/@quiz.EnrollmentId" data-id="@quiz.Id" related-count="0" related-message=''>@Localizer["Delete"]</a>&nbsp; &nbsp;
                </td>

            </tr>
        }

    </table>
</div>