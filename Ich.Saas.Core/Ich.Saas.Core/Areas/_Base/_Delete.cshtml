@if (ViewContext.RouteData.Values["action"].ToString() == "List" ||
    ViewContext.RouteData.Values["action"].ToString() == "Detail")
{

    <div id="delete-modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@Localizer["Delete"]</h4>
                    <button type="button" class="close close-light" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <div>
                        <div class="form-group row">
                            <div class="col-sm-8 font-15 pt-10">
                                @Localizer["Do you want to delete this record?"]
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <form id="delete-form" method="post" asp-antiforgery="true">

                        <input type="hidden" name="id" id="delete-id" />
                        <input type="hidden" name="id" id="delete-return-url" />

                        <button type="button" class="btn btn-sm btn-light js-submit-delete"> @Localizer["OK"] </button>&nbsp;&nbsp;
                        <button type="button" class="btn btn-sm btn-light" data-dismiss="modal">@Localizer["Cancel"]</button>&nbsp;
                    </form>
                </div>
            </div>
        </div>
    </div>
}

