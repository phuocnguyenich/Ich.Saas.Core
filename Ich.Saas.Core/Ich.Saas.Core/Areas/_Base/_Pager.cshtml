@model PagedModel

@if (Model.TotalPages > 1)
{
    <div class="d-flex justify-content-center bg-light p-5">
        <div class="pr-15"><a page="PrevPage" class='@(Model.HasPrevPage ? "" : "disabled")'>@Localizer["Prev"]</a></div>
        <div class="pt-4 font-14">@Localizer["Page"] @Model.Page @Localizer["of"] @Model.TotalPages</div>
        <div class="pl-15"><a page="NextPage" class='@(Model.HasNextPage ? "" : "disabled")'>@Localizer["Next"]</a></div>
    </div>
}
